{% extends 'base.html.twig' %}

{% block body %}
    <div class="login">
        <h1>Connexion</h1>
        <form action="{{ path('login') }}" method="post">
            <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Email"/>

            <input type="password" id="password" name="_password" placeholder="Mot de passe"/>

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"/> #}

            {% if error %}
                <div class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <button type="submit">login</button>
        </form>
    </div>
{% endblock %}
